<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.onboard.OnBoardActivity2"
    android:background="@drawable/bg_onboard">

  <TextView
      android:id="@+id/txt1_ob2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="48dp"
      android:layout_marginTop="80dp"
      android:layout_marginEnd="49dp"
      android:text="FIND YOUR JOB"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:textColor="@color/white"
      android:fontFamily="@font/poppinsbold"
      android:textSize="26dp"
      android:gravity="center"/>

  <ImageView
      android:id="@+id/imageView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="39dp"
      android:src="@drawable/ob3"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txt1_ob2" />

  <TextView
      android:id="@+id/txt2_ob2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="39dp"
      android:layout_marginTop="50dp"
      android:layout_marginEnd="39dp"
      android:text="Find out your most compatible profession with AI recommendation"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView"
      android:textColor="@color/white"
      android:fontFamily="@font/poppinsregular"
      android:textSize="16dp"
      android:gravity="center"/>

  <Button
      android:id="@+id/btn_getstarted"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="30dp"
      android:layout_marginTop="55dp"
      android:layout_marginEnd="30dp"
      android:background="@drawable/btn_onboard"
      android:text="Get Started"
      android:textColor="@color/ThrdBlue"
      android:fontFamily="@font/poppinssemibold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txt2_ob2" />

  </androidx.constraintlayout.widget.ConstraintLayout>